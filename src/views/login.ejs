<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="/styles/login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-form">
            <h2>Welcome</h2>
            <% if (errorMessage) { %>
                <p class="error-message"><%= errorMessage %></p>
            <% } %>
            <form id="form_id" method="post" action="/login">
                <div class="input-group">
                    <label for="phone">Enter your phone number*</label>
                    <input type="text" name="mobileNumber" id="phone" placeholder="Type your phone number" required />
                </div>
                <div class="input-group">
                    <label for="password">Enter your password*</label>
                    <input type="password" name="familyPassword" id="password" placeholder="Type your password" required />
                </div>
                <div class="input-group show-password">
                    <label for="show-password">Click here to show your password</label>
                    <input type="checkbox" id="show-password" onclick="togglePasswordVisibility()">
                </div>
                <div class="btn_wrapper">
                    <button class="btn_login" type="submit">Continue</button>
                </div>
            </form>
            
            <form id="admin_form_id" method="get" action="/admin">
                <div class="btn_wrapper">
                    <button class="btn_login" type="submit">Admin Login</button>
                </div>
            </form>


        <div class="signup-link">
            <p>Haven't created a household? <a href="/register">Sign Up</a></p>
        </div>  
        </div>
    </div>
</body>
</html>

<script> 
function togglePasswordVisibility() {
    const passwordField = document.getElementById('password');
    const showPasswordCheckbox = document.getElementById('show-password');
    
    if (showPasswordCheckbox.checked) {
        passwordField.type = 'text';
    } else {
        passwordField.type = 'password';
    }
}</script>
